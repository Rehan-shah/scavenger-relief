---
const { isDonate } = Astro.props
---
<style>
    button {

        border: none;
        font-weight:900;
        font-size: 18px;
        padding: 8px 16px;
        border-radius: 8px;
    }
    .btn-donate {

        background-color: #333333;
        color: #E4E5DC;
    }


    .btn-learn-more {
                color: #333333;
        background-color: #E4E5DC;
        border: 2px solid #333333;


    }
    </style>
        {isDonate ?
        <button class="btn-donate">Donate Now</button>:

        <button class="btn-learn-more">Learn More</button>
        }
