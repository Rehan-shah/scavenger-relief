---

import Count from "../assets/countup.tsx";

type Dict = {
name: string,
stat: string
}[]

const dict: Dict = [
  {
    name: "Raised over",
    stat: "$4000"
  },
  {
    name: "Helped more than",
    stat: "380"
  },
  {
    name: "Villages helped",
    stat: "11"
  },
  {
    name: "Members Involved",
    stat: "20+"
  }
];
---


<div style="display: flex;justify-content: space-between;background-color: #F6F7F0;width: 80vw;margin-left: -10vw;padding:10px 10vw;">

    {dict.map((item) => (
    <div style="text-align: center;font-weight: 600;opacity: 0.8;padding:20px 0">
        <p style="font-size: 18pt;margin:0px">{item.name}</p>
        <Count client:only="react" loading="lazy" input={item.stat}/>

</div>
    ))
    }
</div>
